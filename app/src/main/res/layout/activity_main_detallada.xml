<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainDetallada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityDetallada">

    <ImageView
        android:id="@+id/idProductoDetallada"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/idDniDetallada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/idDniDetallada"
        android:layout_width="109dp"
        android:layout_height="43dp"
        android:layout_marginBottom="80dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/idNombreDetallada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:hint="DNI" />

    <TextView
        android:id="@+id/idNombreDetallada"
        android:layout_width="128dp"
        android:layout_height="45dp"
        android:layout_marginBottom="52dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/idApellidosDetallada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        tools:hint="NOMBRE" />

    <TextView
        android:id="@+id/idApellidosDetallada"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_marginBottom="52dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/idVolverDetallada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:hint="APELLIDOS" />

    <Button
        android:id="@+id/idVolverDetallada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>